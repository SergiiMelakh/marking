<h1>Listing Jobs from <%= @date_start.strftime("%d/%m/%Y")%> to <%= @date_end.strftime("%d/%m/%Y") %>.</h1>

<% if @jobs_period.empty? %>
<hr>
  <p><h3>Not found records for this period or street</h3></p>
<% else %>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Line</th>
    <th>Square</th>
    <th>Street</th>
    <th>Hous</th>
    <th>Notes</th>
  </tr>

<% @jobs_period.each do |j| %>
  
  <tr>
    <td><%= j.id %></td>
    <td><%= j.date_job.date.strftime("%d/%m/%Y") %></td>
    <td><%= j.line.name %></td>
    <td><%= j.square %></td>
    <td><%= j.street.street %></td>
    <td><%= j.house %></td>
    <td><%= j.note %></td>
  </tr>
  <% end %>

</table>

  <ul>
    <% @sum_marking.sort.each do |key, val| %>
      <li><%= key %> - <%= val.to_s(:rounded, :precision => 2) %> m2</li>
    <% end %>
  </ul>

<strong>SUM MARKING IS : <%= @sum_all_marking.to_s(:rounded, :precision => 2) %>m2</strong>

<% end %>

