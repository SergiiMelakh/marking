<p id="notice"><%= notice %></p>

<h1>Listing Streets</h1>
<%= link_to t('New Street'), new_street_path %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Street</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streets.each do |street| %>
      <tr>
        <td><%= street.id %></td>
        <td><%= street.street %></td>
        <td><%= link_to t('Edit'), edit_street_path(street) %></td>
        <td><%= link_to t('Destroy'), street, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New Street'), new_street_path %>
