<p id="notice"><%= notice %></p>

<h1>Перечень улиц</h1>

<br />
<%= link_to 'Добавить новую улицу', new_street_path %>
<br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>№ п/п</th>
      <th>Улица</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streets.each do |street| %>
      <tr>
        <td><%= street.id %></td>
        <td><%= street.street %></td>
        <td><%= link_to t('Изменить'), edit_street_path(street) %></td>
        <td><%= link_to t('Удалить'), street, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

