<p id="notice"><%= notice %></p>

<h1>Вид разметки</h1>

<br />
<%= link_to 'Добавить вид разметки', new_line_path %>
<br />

<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>№ п/п</th>
      <th>Вид разметки</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines.each do |line| %>
      <tr>
        <td><%= line.id %></td>
        <td><%= link_to line.name, line %></td>
        <td><%= link_to 'Изменить', edit_line_path(line) %></td>
        <td><%= link_to 'Удалить', line, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

