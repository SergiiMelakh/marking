<p id="notice"><%= notice %></p>

<h1>Listing Acts</h1>

<table>
  <thead>
    <tr>
      <th>Date act</th>
      <th>Number act</th>
      <th>Money</th>
      <th>Street</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acts.each do |act| %>
      <tr>
        <td><%= act.date_act %></td>
        <td><%= act.number_act %></td>
        <td><%= act.money %></td>
        <td><%= act.street %></td>
        <td><%= link_to 'Show', act %></td>
        <td><%= link_to 'Edit', edit_act_path(act) %></td>
        <td><%= link_to 'Destroy', act, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

